                <td th:text="${product.unitsOnStock}"></td>
                <td>
                <td>
                    <div class="btn-group" role="group">
                        <form action="#" th:action="@{/UpdateProductCategory}" method="POST">
                            <input type="hidden" th:value="${product.id}" name="id">
                            <button id="btn_update_product_category" type="submit"
                                class="btn btn-outline-primary">Modificar
                                <ion-icon name="create"></ion-icon></button>
                        </form>
                        <form action="#" th:action="@{/DeleteProductCategory}" method="POST">
                            <input type="hidden" th:value="${product.id}" name="id">
                            <button id="btn_delete_product_category" type="submit"
                                class="btn btn-outline-danger">Eliminar
                                <ion-icon name="trash"></ion-icon></button>
                        </form>
                    </div>
                </td>
                </td>
            </tr>
        </tbody>
    </table>
    <button>Ordenar</button>
